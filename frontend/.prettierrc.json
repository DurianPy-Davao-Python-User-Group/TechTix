{
  "$schema": "http://json.schemastore.org/prettierrc",
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "printWidth": 160,
  "tabWidth": 2,
  "singleQuote": true,
  "trailingComma": "none",
  "importOrder": [
    "^react$",
    "^react-router-dom$",
    "^react-dom$",
    "^[a-z]",
    "^@/assets",
    "^@/components",
    "^@/api",
    "^@/utils",
    "^@/hooks",
    "^@/styles",
    "^@/pages",
    "^[./]|[.](css|scss)$",
    ".*"
  ],
  "overrides": [
    {
      "files": ["**/*.yml"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
